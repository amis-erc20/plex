{
  "name": "dharma-plex",
  "version": "1.0.0",
  "description": "An example client built on top of Dharma Protocol",
  "engines": {
    "node": "9.11.x"
  },
  "scripts": {
    "chain": "cd chain/ && yarn && yarn chain",
    "start": "node server",
    "test": "cd client/ && yarn && yarn jest",
    "prettify": "prettier --write '{server, client/src}/**/*.{ts,tsx,js}'",
    "heroku-postbuild": "cd client/ && yarn && yarn build"
  },
  "husky": {
      "hooks": {
          "pre-commit": "yarn prettify"
      }
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "express": "^4.14.1"
  },
  "repository": "https://github.com/DharmaProtocol/plex",
  "keywords": [
    "Dharma Protocol",
    "Plex",
    "blockchain"
  ],
  "license": "MIT",
  "devDependencies": {
      "prettier": "^1.11.1",
      "husky": "^0.14.3"
  },
  "main": "index.js"
}
